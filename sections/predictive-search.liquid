{%- if predictive_search.performed -%}
  <div id="predictive-search-results" class="bg-white p-8 mt-2 border border-green-700 rounded-md z-20 max-w-sm">
    <div class="mb-4">
      <h3 id="predictive-search-products" class="text-2xl mb-2">
        Products
      </h3>
      {%- if predictive_search.resources.products.size > 0 -%}
        <ul role="listbox" aria-labelledby="predictive-search-products">
          {%- for product in predictive_search.resources.products -%}
            <li role="option" class="my-4 hover:bg-gray-300 p-2">
              <a href="{{ product.url }}" class="flex">
                {% if product.featured_image %}
                  {{ product | image_url: width: 100, height: 100 | image_tag }}
                {% else %}
                  <div class="bg-green-900">
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover invert' }}
                  </div>
                {% endif %}
                <div class="flex flex-col pl-2">
                  <p class="font-semibold">{{ product.title }}</p>
                  <p>{{ product.description | truncatewords: 15 }}</p>
                </div>
              </a>
            </li>
          {%- endfor -%}
        </ul>
      {% else %}
        <span class="text-gray-400">None found.</span>
      {%- endif -%}
    </div>

    <div class="mb-4">
      <h3 id="predictive-search-pages" class="text-2xl mb-2">
        Pages
      </h3>
      <ul role="listbox" aria-labelledby="predictive-search-pages">
        {% if predictive_search.resources.pages.size > 0 %}
          {%- for page in predictive_search.resources.pages -%}
            <li role="option" class="my-4 hover:bg-gray-400">
              <a href="{{ page.url }}">{{ page.title }}</a>
            </li>
          {%- endfor -%}
        {% else %}
          <span class="text-gray-400">None found.</span>
        {% endif %}
      </ul>
    </div>

    <div class="mb-4">
      <h3 id="predictive-search-articles" class="text-2xl mb-2">
        Articles
      </h3>
      <ul role="listbox" aria-labelledby="predictive-search-articles">
        {% if predictive_search.resources.articles.size > 0 %}
          {%- for article in predictive_search.resources.articles -%}
            <li role="option" class="my-4 hover:bg-gray-400">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </li>
          {%- endfor -%}
        {% else %}
          <span class="text-gray-400">None found.</span>
        {% endif %}
      </ul>
    </div>
  </div>
{%- endif -%}