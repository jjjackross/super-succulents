<div class="h-full flex items-center justify-center px-6 md:px-4 lg:px-8" x-data="{ loginForm: true, pwRecoverForm: false }">
    <div x-show="loginForm" class="max-w-md w-full mb-8">
        <div>
            <h1 class="text-center text-3xl font-medium py-8">Sign in to your account</h1>
        </div>
        <div class="mt-8">
            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-2">
                    <label for="email_address" class="text-gray-500 font-medium uppercase text-xs mb-2">Email address</label>
                    <input
                        type="email"
                        name="customer[email]"
                        id="email_address"
                        autocomplete="email"
                        class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none rounded-md border-green-700"
                    >
                </div>

                {% if form.password_needed %}
                    <div class="my-2">
                        <label for="password" class="text-gray-500 font-medium uppercase text-xs mb-2">Password</label>
                        <input
                            type="password"
                            name="customer[password]"
                            id="password"
                            autocomplete="current-password"
                            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none rounded-md border-green-700"
                        >
                    </div>
                {% endif %}

                <div class="my-2 text-sm">
                    <a x-on:click="loginForm = false; pwRecoverForm = true" href="#" class="underline text-gray-500 hover:text-gray-900">Forgot your password?</a>
                </div>

                <div>
                    <button type="submit" class="w-full cursor-pointer px-4 py-2 border border-green-700 rounded-full text-base font-medium text-green-700 bg-white hover:bg-green-700 hover:text-white hover:border-green-700 active:border-green-900 active:bg-green-900">Sign in</button>
                </div>
            {% endform %}
        </div>

        {% if shop.checkout.guest_login %}
            <hr class="my-12">

            <div>
                <h1 class="text-center text-3xl font-medium py-8">Continue as a guest</h1>
            </div>

            {% form 'guest_login' %}
                <div>
                    <button type="submit" class="w-full cursor-pointer px-4 py-2 border border-green-700 rounded-full text-base font-medium text-green-700 bg-white hover:bg-green-700 hover:text-white hover:border-green-700 active:border-green-900 active:bg-green-900">Continue</button>
                </div>
            {% endform %}
        {% endif %}
    </div>

    <div x-show="pwRecoverForm" class="max-w-md w-full mb-8">
        <div>
            <h1 class="text-center text-3xl font-medium py-8">Recover your password</h1>
        </div>
        <div class="mt-8">
            {% form 'recover_customer_password' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red 700 px-4 py-3" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-2">
                    <label for="email" class="text-gray-500 font-medium uppercase text-xs mb-2">Email address</label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        autocomplete="email"
                        class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none rounded-md border-green-700"
                    >
                </div>

                <div>
                    <button type="submit" class="w-full cursor-pointer px-4 py-2 border border-green-700 rounded-full text-base font-medium text-green-700 bg-white hover:bg-green-700 hover:text-white hover:border-green-700 active:border-green-900 active:bg-green-900">Recover Password</button>
                </div>

                <div class="mt-8 text-sm">
                    <a x-on:click="loginForm = true; pwRecoverForm = false" href="#" class="underline text-gray-500 hover:text-gray-900">Back to login</a>
                </div>
            {% endform %}
        </div>
    </div>
</div>