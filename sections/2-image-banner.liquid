<div class="grid grid-cols-1 md:grid-cols-2">
  <div class="relative px-4 pt-4 pb-2 md:py-4 md:pl-6 md:pr-3 h-96">
    <img
      src="{{ section.settings.image_left.src | img_url: "original" }}"
      alt="{{ section.settings.image_left.alt }}"
      class="w-full h-full object-cover overflow-hidden rounded-lg">
    <div class="absolute bottom-6 left-8 md:bottom-10 md:left-12">
      <h3 class="text-white font-bold text-2xl md:text-3xl mb-4 w-5/6 md:w-4/5 lg:w-full">{{ section.settings.image_left_title }}</h3>
      <a class="text-center block w-36 md:w-20 md:w-44 p-2 md:p-3 border border-white bg-white text-green-700 font-medium hover:bg-green-700 hover:text-white hover:border-green-700 rounded-lg active:bg-green-900 active:border-green-900" href="{{ section.settings.button_left_link }}">{{ section.settings.button_left_text }}</a>
    </div>
  </div>
  <div class="relative px-4 pt-2 pb-4 md:py-4 md:pl-3 md:pr-6 h-96">
    <img
      src="{{ section.settings.image_right.src | img_url: "original" }}"
      alt="{{ section.settings.image_right.alt }}"
      class="w-full h-full object-cover overflow-hidden rounded-lg">
    <div class="absolute bottom-6 left-8 md:bottom-10 md:left-12">
      <h3 class="text-white font-bold text-2xl md:text-3xl mb-4 w-5/6 md:w-4/5 lg:w-full">{{ section.settings.image_right_title }}</h3>
      <a class="text-center block w-36 md:w-20 md:w-44 p-2 md:p-3 border border-white bg-white text-green-700 font-medium hover:bg-green-700 hover:text-white hover:border-green-700 rounded-lg active:bg-green-900 active:border-green-900" href="{{ section.settings.button_right_link }}">{{ section.settings.button_right_text }}</a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "2 Image Banner",
    "settings": [
      {
        "type": "text",
        "id": "image_left_title",
        "default": "Image Left Title",
        "label": "Image Left Title"
      },
      {
        "type": "text",
        "id": "button_left_text",
        "default": "Shop Now",
        "label": "Lefside Button Text"
      },
      {
        "type": "url",
        "id": "button_left_link",
        "label": "Leftside Button Link"
      },
      {
        "type": "image_picker",
        "id": "image_left",
        "label": "Leftside Image"
      }, {
        "type": "text",
        "id": "image_right_title",
        "default": "Image Right Title",
        "label": "Image Right Title"
      }, {
        "type": "text",
        "id": "button_right_text",
        "default": "Read More",
        "label": "Rightside Button Text"
      }, {
        "type": "url",
        "id": "button_right_link",
        "label": "Rightside Button Link"
      }, {
        "type": "image_picker",
        "id": "image_right",
        "label": "Rightside Image"
      }
    ]
  }
{% endschema %}