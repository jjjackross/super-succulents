<div class="py-8 grid grid-cols-1 md:grid-cols-2">
    <div class="p-8 md:p-12 lg:p-20 xl:p-40 flex items-center">
        <div class="mx-8 w-full">
            <h3 class="text-2xl font-medium mb-4 xl:mb-8">{{ section.settings.image_h3 }}</h3>
            <p class="mb-4 xl:mb-8">{{ section.settings.image_content }}</p>
            <a href="{{ section.settings.linked_page.url }}" class="text-center block w-full md:w-1/2 xl:w-1/3 p-3 border border-green-700 text-green-700 font-medium hover:bg-green-700 hover:text-white rounded-lg active:bg-green-900 active:border-green-900">{{ section.settings.button_text }}</a>
        </div>
    </div>
    <div>
        <img src="{{ section.settings.side_image.src | img_url: 'original' }}" alt="{{ section.settings.side_image.alt }}" class="w-full h-full">
    </div>
</div>

{% schema %}
{
    "name": "Text & Image",
    "settings": [
        {
           "type": "text",
           "id": "image_h3",
           "default": "Heading goes here",
           "label": "Image H3"
        },
        {
           "type": "textarea",
           "id": "image_content",
           "default": "Content goes here.",
           "label": "Image Content"
        },
        {
           "type": "page",
           "id": "linked_page",
           "label": "Linked Page"
        },
        {
           "type": "text",
           "id": "button_text",
           "default": "Read More",
           "label": "Button Text"
        },
        {
           "type": "image_picker",
           "id": "side_image",
           "label": "Side Image"
        }
    ]
}
{% endschema %}