<div class="flex justify-center items-center h-screen bg-local bg-cover" style="background-image: url({{ section.settings.banner_image | img_url: 'original' }});">
    <div class="text-center max-w-4xl px-4">
        <h2 class="font-bold italic text-6xl text-white">{{ section.settings.banner_title }}</h2>
        <hr class="w-1/3 mx-auto my-8">
        <p class="font-medium text-lg text-white">{{ section.settings.banner_subtext }}</p>
    </div>
</div>

{% schema %}
{
    "name": "Image Banner",
    "settings": [
        {
            "type": "text",
            "id": "banner_title",
            "default": "Live green, Think green",
            "label": "banner_title"
        },
        {
            "type": "text",
            "id": "banner_subtext",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Fames ac turpis egestas integer eget aliquet nibh praesent.",
            "label": "Banner Subtext"
        },
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner Image"
        }
    ],
    "presets": [
            {
            "name": "Image Banner"
            }
        ]
}
{% endschema %}